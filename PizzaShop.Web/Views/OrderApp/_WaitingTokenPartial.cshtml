@model List<PizzaShop.Entity.ViewModel.WaitingTokenViewModel>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#Token No</th>
                <th scope="col">Created At</th>
                <th scope="col">Waiting Time</th>
                <th scope="col">Name</th>
                <th scope="col">No. Of Persons</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || Model.Count == 0)
            {
                <tr>
                    <td colspan="8" class="text-center">No waiting tokens available.</td>
                </tr>
            }
            else
            {
                @foreach (var waitingToken in Model)
                {
                    var customerJson = System.Text.Json.JsonSerializer.Serialize(waitingToken);
                    <tr>
                        <td>#@waitingToken.TokenId</td>
                        <td>@waitingToken.CreatedTime</td>
                        <td><span class="text-muted updatedLiveTimeToken" data-starttime="@waitingToken.CreatedTime.ToString("yyyy-MM-ddTHH:mm:ss")"></span></td>
                        <td>@waitingToken.CustomerName</td>
                        <td>@waitingToken.NoOfPeople</td>
                        <td>@waitingToken.CustomerPhone</td>
                        <td>@waitingToken.CustomerEmail</td>
                        <td>
                            <div class="d-flex">
                                <button class="d-flex btn align-items-center edit-token" data-token-id="@waitingToken.TokenId" title="Edit">
                                    <img src="~/images/Download/pencil.svg" alt="">
                                </button>
                                <a class="btn  deleteTokenBtn" data-bs-toggle="modal" title="Delete"
                                    data-bs-target="#waitingTokenDeleteModal">
                                    <img src="~/images/Download/trash.svg" alt="">
                                </a>
                                <button data-total-persons="@waitingToken.NoOfPeople" title="Assign" data-id="@waitingToken.TokenId" data-customer='@Html.Raw(customerJson)' class="btn assign-table-btn">
                                    <img src="~/images/Download/person-check.svg" alt="">
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="waitingTokenDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <img class="alert_img" width="80px" height="80px"
                        src="~/images/toppng.com-warning-icon-2400x2400.png" alt="">
                </div>
                <div class="d-flex justify-content-center">Are you sure you want to
                    delete this Waiting token?</div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <div class=" mt-3">
                    <a href="@Url.Action("DeleteWaitingToken", new { TokenId = 1})"
                        class="btn custom-btn-bg text-white" id="deleteTokenLink">Yes</a>
                    <a type="submit" class="btn custom-blue-border cancel-btn-color ms-1">No</a>
                </div>
            </div>
        </div>
    </div>
</div>
