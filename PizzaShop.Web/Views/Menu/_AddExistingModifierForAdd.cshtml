@model PizzaShop.Entity.ViewModel.MenuItemViewModel
<div class="table-responsive" id="existingModifiersForAddGroupTable">
    <table class="table" style="border-top: none;">
        <thead>
            <tr>
                <th scope="col" style="width: 40px; border-top: none;">
                    <input class="form-check-input" type="checkbox" value="">
                </th>
                <th scope="col" style="border-top: none;">Name</th>
                <th scope="col" style="border-top: none;" class="text-center">Unit</th>
                <th scope="col" style="border-top: none;" class="text-center">Rate</th>
                <th scope="col" style="border-top: none;" class="text-center">Quantity</th>
            </tr>
        </thead>
        <tbody>
            <form id="existingModifiersForAddGroupForm">
                @foreach (var modifier in Model.Modifiers)
                {
                    <tr>
                        <th scope="row" style="border-top: 1px solid rgb(182, 177, 177);">
                            <input class="form-check-input modifiersIdsForAdd rowModifierCheckForAdd_@modifier.ModifierId"
                                type="checkbox" data-id='@modifier.ModifierId' data-name="@modifier.Name">
                            <input type="hidden" data-id="@modifier.ModifierId">
                        </th>
                        <td style=" border-top: 1px solid rgb(182, 177, 177);">
                            @modifier.Name
                        </td>
                        <td class="text-center" style=" border-top: 1px solid rgb(182, 177, 177);">@modifier.Unit</td>
                        <td class="text-center" style=" border-top: 1px solid rgb(182, 177, 177);">@modifier.Rate</td>
                        <td class="text-center" style=" border-top: 1px solid rgb(182, 177, 177);">@modifier.Quantity</td>
                    </tr>
                }
            </form>
        </tbody>
    </table>
    <div class="d-flex align-items-center justify-content-end">
        <label for="pageSizes" class="pe-3">Items per page:</label>
        <div class="mt-3 d-flex me-3 " style="height: 37px; width: 50px; margin: 0px !important;">
            <select style="border-radius: 5px; height: 40px;" id="pageSizesForAddExistingModifiers">
                @foreach (var size in new[] { 5, 10, 15, 20 })
                {
                    <option value="@size" selected="@(Model.PageSize == size ? "selected" : null)">@size</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <span id="currentPageDisplay">Showing @Model.FromItem-@Model.ToItem of @Model.totalItems</span>
            <button id="prevPageForAddExistingModifiersAdd" class="ms-2 btn bg-white border 
            @(Model.CurrentPage == 1 ? "disabled" : "")">&lt;</button>
            <button id="nextPageForAddExistingModifiersAdd" class=" btn bg-white border ms-2
            @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">&gt;</button>
        </div>
    </div>
    <div class="create_cancel_btn ">
        <button type="button" id="saveAddExistingModifiersForAdd" class="btn text-white custom-btn-bg">Add</button>
        <a class="btn bg-white custom-blue-color custom-blue-border" data-bs-dismiss="modal">Cancel</a>
    </div>
    
    <input type="hidden" id="currentPageForExistingModifiers" value="@Model.CurrentPage" />
    <input type="hidden" id="pageSizeForExistingModifiers" value="@Model.PageSize" />
    <input type="hidden" id="totalPagesForExistingModifiers" value="@Model.TotalPages" />
    <input type="hidden" id="totalItemsForExistingModifiers" value="@Model.totalItems" />
</div>