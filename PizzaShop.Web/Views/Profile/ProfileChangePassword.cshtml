@model PizzaShop.Entity.ViewModel.ProfileChangePasswordViewModel;

@{
    ViewData["Title"] = "Profile Change Password";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

<div class="add_user_heading d-flex justify-content-between mb-3">
    <div class="fw-bold fs-2">Change Password</div>
</div>

<form method="post" class="ProfileChangeDiv py-3 d-flex flex-column">
    <div class="mb-3">
        Enter a new password to update your account credentials
    </div>
    <div>
        <div class="form-floating w-50 mb-3">
            <input style="position: relative;" asp-for="CurrentPassword" type="password" class="form-control"
                id="CurrentPassword" placeholder="Password">
            <i class="far fa-eye" id="toggleCurrentPassword"
                style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
            <label for="floatingPassword">Current Password*</label>
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="form-floating w-50 mb-3">
            <input type="password" class="form-control add_user_input  " id="newPassword" asp-for="NewPassword"
                placeholder="abc@123">
            <i class="far fa-eye" id="toggleNewPassword"
                style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
            <label for="newPassword">New Password*</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-floating w-50 mb-3">
            <input type="password" class="form-control add_user_input" id="confirmPassword"
                asp-for="ConfirmPassword" placeholder="abc@123">
            <i class="far fa-eye" id="toggleConfirmPassword"
                style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
            <label for="floatingInput">Confirm New Password*</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary custom-bg-blue me-2">Submit</button>
        <a asp-controller="Dashboard" asp-action="Index" class="btn custom-blue-borderBtn custom-blue-color">Cancel</a>
    </div>
</form>

<script>
    const eyebtn = document.getElementById("toggleCurrentPassword");
    const passfield = document.getElementById('CurrentPassword');
    toggleCurrentPassword.addEventListener('click', function (e) {
        const type = passfield.getAttribute('type') === 'password' ? 'text' : 'password';
        passfield.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    });

    const eyeBtnForNew = document.getElementById("toggleNewPassword");
    const passFieldForNew = document.getElementById('newPassword');
    toggleNewPassword.addEventListener('click', function (e) {
        const type = passFieldForNew.getAttribute('type') === 'password' ? 'text' : 'password';
        passFieldForNew.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    });

    const eyeBtnForConfirm = document.getElementById("toggleConfirmPassword");
    const passFieldForConfirm = document.getElementById('confirmPassword');
    toggleConfirmPassword.addEventListener('click', function (e) {
        const type = passFieldForConfirm.getAttribute('type') === 'password' ? 'text' : 'password';
        passFieldForConfirm.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    });


</script>

