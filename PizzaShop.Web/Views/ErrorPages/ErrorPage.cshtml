@{
    ViewData["Title"] = "Error Page" ;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/logos/pizzashop_logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body class="" style="height: 100vh; width: 100vw; background-color: #c3e6f6;">
    <div class="errorPageHeader d-flex align-items-center justify-content-center" style=" height: 20vh; width: 100vw;">
        <img class="img-fluid " width="100" height="100" src="~/images/logos/pizzashop_logo.png" alt="Pizza shop logo not found">
        <div class=" fs-5  custom-blue-color" style="font-size: 3rem !important;">PIZZASHOP</div>
    </div>
    <div class="errorPageBody custom-blue-color fw-bold d-flex align-items-center justify-content-center" style="font-size: 200px;">
        @ViewData["StatusCode"]
    </div>
    <div class="errorPageFooter d-flex align-items-center justify-content-center flex-column mt-5">
        <div class="text-secondary fs-4 mb-4">@ViewData["StatusHeader"]</div>
        <div class="custom-blue-color ">@ViewData["StatusMessage"]</div>
    </div>
</body>

</html>